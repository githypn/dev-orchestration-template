{
  "name": "Dev Orchestration Project",

  // Python 3.11 ベースイメージ
  // project-config.yml の toolchain.language / toolchain.version に合わせて変更すること
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",

  // コンテナ作成後にセットアップスクリプトを実行する
  "postCreateCommand": "bash .devcontainer/setup.sh",

  // ===== VS Code 拡張機能 =====
  "customizations": {
    "vscode": {
      "extensions": [
        // --- 必須：Copilot & GitHub 連携 ---
        "github.copilot-chat",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",

        // --- 必須：Python 開発 ---
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.mypy-type-checker",
        "ms-python.debugpy",

        // --- 必須：Git ---
        "eamodio.gitlens",

        // --- 推奨：Jupyter / データ分析 ---
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.datawrangler",

        // --- 推奨：ドキュメント・設定ファイル ---
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "redhat.vscode-yaml",
        "editorconfig.editorconfig",

        // --- 推奨：コード品質 ---
        "oderwat.indent-rainbow",
        "kevinrose.vsc-python-indent",
        "mechatroner.rainbow-csv"
      ],

      // ===== VS Code 設定（クロスプラットフォーム） =====
      "settings": {
        // Python 環境（Codespaces / Linux 用パス）
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

        // Copilot Agent Orchestration
        "chat.customAgentInSubagent.enabled": true,
        "github.copilot.chat.responsesApiReasoningEffort": "high",

        // Python 固定設定
        "python.analysis.typeCheckingMode": "strict",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"],

        // エディタ設定
        "editor.formatOnSave": true,
        "editor.rulers": [100],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      }
    }
  },

  // ===== 環境変数 =====
  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1"
  }
}
